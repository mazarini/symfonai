{
    "name": "mazarini/symfonai",
    "type": "project",
    "description": "Web application and Symfony service using AI to generate and modify Symfony code",
    "keywords": [
        "symfony",
        "AI",
        "code-generation",
        "developer-tool",
        "automation"
    ],
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Mazarini",
            "email": "mazarini@pm.me"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/console": "^7.3",
        "symfony/dotenv": "^7.3",
        "symfony/flex": "^2.8",
        "symfony/framework-bundle": "^7.3",
        "symfony/runtime": "^7.3",
        "symfony/yaml": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "Mazarini\\SymfonAI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mazarini\\SymfonAI\\Test\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": false,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts",
            "npm install"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "fix": "vendor/bin/php-cs-fixer fix",
        "lint": "vendor/bin/php-cs-fixer fix --dry-run --diff",
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.dist.neon",
        "test": "vendor/bin/phpunit",
        "cover": "vendor/bin/phpunit --coverage-html var/coverage",
        "cover-text": "vendor/bin/phpunit --coverage-text",
        "dist-upgrade": [
            "composer update",
            "npm update",
            "npm install"
        ],
        "check": [
            "composer validate --strict",
            "@lint",
            "@phpstan",
            "@test"
        ],
        "prettier": "npx prettier --write ."
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "^7.3"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.89",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "phpunit/phpunit": "^12.4",
        "symfony/browser-kit": "^7.3",
        "symfony/css-selector": "^7.3"
    }
}
