{% extends "base.html.twig" %}

{% block title %}
  Chat - SymfonAI
{% endblock %}

{% block body %}
  <div class="chat-container">
    <form method="post" class="mb-3">
      <div class="mb-3">
        <label for="question" class="form-label">Pose ta question :</label>
        <input type="text"
          id="question"
          name="question"
          class="form-control"
          value="{{ question }}" />
      </div>
      <button type="submit" class="btn btn-primary">Envoyer</button>
    </form>

    {% if answer %}
      <div class="alert alert-secondary">
        {{ answer }}
      </div>
    {% endif %}
  </div>
{% endblock %}
